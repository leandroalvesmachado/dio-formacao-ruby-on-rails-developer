<section class="text-center container">
  <h1>Lista de Carros</h1>
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Nome</th>
        <th>Modelo</th>
        <th>Ano</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @carros.each do |carro| %>
        <tr>
          <td>
            <%= carro.id %>
          </td>
          <td><%= carro.nome %></td>
          <td><%= carro.modelo %></td>
          <td><%= carro.ano %></td>
          <td style="width: 40%;">
            <!-- <a href="<%= carros_show_path(carro.id) %>"><%= carro.id %></a> -->
            <!-- ou -->
            <%= link_to "Mostrar", carros_show_path(carro.id), "class": "btn btn-primary" %>
            <%= link_to "Editar", edit_carro_path(carro.id), "class": "btn btn-warning" %>
            <%= link_to "Apagar", carros_apagar_path(carro.id), "class": "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>